<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>


<fx:root fitToHeight="true" fitToWidth="true" type="ScrollPane" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <GridPane hgap="15.0" vgap="15.0">
        <columnConstraints>
          <ColumnConstraints percentWidth="20.0" />
          <ColumnConstraints percentWidth="80.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints />
          <RowConstraints />
          <RowConstraints />
            <RowConstraints />
            <RowConstraints vgrow="ALWAYS" />
        </rowConstraints>
         <children>
            <ImageView fx:id="applicationLogoIconImageView" pickOnBounds="true" preserveRatio="true" GridPane.columnSpan="2" GridPane.halignment="CENTER" />
            <Label fx:id="applicationTextLabel" text="Application:" GridPane.rowIndex="1" />
            <ScrollPane GridPane.columnIndex="1" GridPane.rowIndex="1">
               <content>
                  <TextFlow>
                     <children>
                        <Text fx:id="applicationText" strokeType="OUTSIDE" strokeWidth="0.0" />
                     </children>
                  </TextFlow>
               </content>
            </ScrollPane>
            <Label fx:id="versionTextLabel" text="Version:" GridPane.rowIndex="2" />
            <ScrollPane GridPane.columnIndex="1" GridPane.rowIndex="2">
               <content>
                  <TextFlow>
                     <children>
                        <Text fx:id="versionText" strokeType="OUTSIDE" strokeWidth="0.0" />
                     </children>
                  </TextFlow>
               </content>
            </ScrollPane>
            <Label fx:id="copyrightTextLabel" text="Copyright:" GridPane.rowIndex="3" />
            <ScrollPane GridPane.columnIndex="1" GridPane.rowIndex="3">
               <content>
                  <TextFlow>
                     <children>
                        <Text fx:id="copyrightText" strokeType="OUTSIDE" strokeWidth="0.0" />
                     </children>
                  </TextFlow>
               </content>
            </ScrollPane>
            <Label fx:id="licenseTextLabel" text="License:" GridPane.rowIndex="4" />
            <ScrollPane fitToWidth="true" GridPane.columnIndex="1" GridPane.rowIndex="4">
               <content>
                  <TextFlow>
                     <children>
                        <Text fx:id="licenseText" strokeType="OUTSIDE" strokeWidth="0.0" />
                     </children>
                  </TextFlow>
               </content>
            </ScrollPane>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </GridPane>
   </content>
</fx:root>
